<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOMANLPAnnotator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <!-- Colors -->
        <item name="defaultTextColor">@color/white</item>
        <item name="editTextStrokeColor">#eeeeee</item>
        <item name="editTextBackgroundColor">#eeeeee</item>
        <item name="mainButtonBackgroundColor">#0000ff</item>
        <item name="acceptButtonBackgroundColor">#00ff00</item>
        <item name="declineButtonBackgroundColor">#ff0000</item>
        <item name="skipButtonStrokeColor">#aaaaaa</item>
        <item name="toolbar_color">@color/black</item>
        <item name="entitiesBackgroundColor">#78ee46</item>
        <item name="IntentBackgroundColor">#78ee46</item>
        <item name="IntentBackgroundColorSelected">#78ee46</item>

        <!-- Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/airbnbcerealbook</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/edit_text_background</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomEditTextMultiLine" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/edit_text_background_multiline</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomMainButton" parent="Theme.SOMANLPAnnotator">
        <item name="background">@drawable/main_button_background</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSkipButton" parent="CustomMainButton">
        <item name="background">@drawable/skip_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomContinueButton" parent="Widget.AppCompat.ImageButton">
        <item name="background">@drawable/main_button_background</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAcceptButton" parent="Widget.AppCompat.ImageButton">
        <item name="background">@drawable/accept_button_background</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDeclineButton" parent="Widget.AppCompat.ImageButton">
        <item name="background">@drawable/decline_button_background</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>
</resources>