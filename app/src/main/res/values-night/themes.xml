<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOMANLPAnnotator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1c1c1e</item>
        <item name="colorPrimaryVariant">#1c1c1e</item>
        <item name="colorOnPrimary">#1c1c1e</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#1c1c1e</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <!-- Customize your theme here. -->
        <!-- Transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Colors -->
        <item name="defaultTextColor">@color/white</item>
        <item name="editTextStrokeColor">#242426</item>
        <item name="editTextBackgroundColor">#242426</item>
        <item name="mainButtonBackgroundColor">#807fce</item>
        <item name="acceptButtonBackgroundColor">#5dcf95</item>
        <item name="declineButtonBackgroundColor">#ee5735</item>
        <item name="skipButtonStrokeColor">#f9f9fb</item>
        <item name="skipButtonBackgroundColor">#f9f9fb</item>
        <item name="toolbar_color">#1c1c1e</item>
        <item name="entitiesBackgroundColor">#5dcf95</item>
        <item name="IntentBackgroundColor">#f6f1f8</item>
        <item name="IntentBackgroundColorSelected">#1c1c1e</item>

        <!-- Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/airbnbcerealbook</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="CustomTextViewForEmptyMessage" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#aaaaaa</item>
    </style>

    <style name="CustomEntitiesTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size_17</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/edit_text_background</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="CustomEditTextMultiLine" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/edit_text_background_multiline</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="CustomMainButton" parent="Theme.SOMANLPAnnotator">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSkipButton" parent="CustomMainButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomContinueButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAcceptButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDeclineButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>
</resources>