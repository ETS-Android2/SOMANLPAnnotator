<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_margin_0"
    android:layout_marginEnd="@dimen/default_margin_5"
    android:layout_marginBottom="@dimen/default_margin_10"
    android:background="@drawable/entities_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/entity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_margin_10"
        android:paddingStart="@dimen/default_margin_20"
        android:paddingEnd="@dimen/default_margin_20"
        android:paddingBottom="@dimen/default_margin_10"
        android:text=""
        style="@style/CustomEntitiesTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/cancel_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/default_margin_10"
        android:layout_marginEnd="@dimen/default_margin_10"
        android:src="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/entity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/image_button_content_description_in_view_and_delete_entity_row" />


</androidx.constraintlayout.widget.ConstraintLayout>