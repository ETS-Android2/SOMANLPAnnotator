<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/custom_dialog_background">

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_margin_20"
        android:visibility="gone"
        android:contentDescription="@string/dialog_message" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_25"
        android:paddingStart="@dimen/default_margin_25"
        android:paddingEnd="@dimen/default_margin_25"
        android:gravity="center"
        android:layout_gravity="center"
        android:text=""
        style="@style/CustomTextView"/>

    <View
        android:layout_width="310dp"
        android:layout_gravity="center"
        android:layout_height="0.0dp"
        android:background="#eeeeee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/option_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/default_margin_25"
            android:layout_marginEnd="@dimen/default_margin_25"
            android:layout_marginTop="@dimen/default_margin_25"
            android:layout_marginBottom="@dimen/default_margin_25"
            android:padding="@dimen/default_margin_10"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/option"
            android:background="@drawable/main_button_background"
            style="@style/CustomMainButton" />

    </LinearLayout>

</LinearLayout>